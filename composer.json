{
  "name": "dotkernel/dot-admin",
  "description": "Dotkernel Admin Application",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",
    "roave/security-advisories": "dev-master",
    "zendframework/zend-expressive": "^1.0",
    "zendframework/zend-expressive-fastroute": "^1.0",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-expressive-twigrenderer": "^1.0",
    "zendframework/zend-db": "^2.8",
    "zendframework/zend-i18n": "^2.7",
    "zendframework/zend-i18n-resources": "^2.5",
    "zendframework/zend-captcha": "^2.6",
    "zendframework/zendservice-recaptcha": "^2.0",
    "zendframework/zend-text": "^2.6",
    "zendframework/zend-stdlib": "^3.0",
    "zendframework/zend-psr7bridge": "^0.2.2",
    "zendframework/zend-config": "^2.6",
    "zendframework/zend-config-aggregator": "^0.2.0",
    "zendframework/zend-component-installer": "^0.6.0 || ~1.0",

    "dotkernel/dot-helpers": "0.6.x-dev",
    "dotkernel/dot-ems": "dev-develop as 0.6.x-dev",
    "dotkernel/dot-log": "dev-develop as 0.6.x-dev",
    "dotkernel/dot-annotated-services": "0.6.x-dev",
    "dotkernel/dot-cache": "0.6.x-dev",
    "dotkernel/dot-filter": "0.6.x-dev",
    "dotkernel/dot-validator": "0.6.x-dev",
    "dotkernel/dot-inputfilter": "0.6.x-dev",
    "dotkernel/dot-hydrator": "0.6.x-dev",
    "dotkernel/dot-form": "0.6.x-dev",
    "dotkernel/dot-event": "0.6.x-dev",
    "dotkernel/dot-session": "0.6.x-dev",
    "dotkernel/dot-flashmessenger": "0.6.x-dev",
    "dotkernel/dot-controller": "0.6.x-dev",
    "dotkernel/dot-controller-plugin-flashmessenger": "0.6.x-dev",
    "dotkernel/dot-controller-plugin-authentication": "0.6.x-dev",
    "dotkernel/dot-controller-plugin-authorization": "0.6.x-dev",
    "dotkernel/dot-controller-plugin-mail": "0.6.x-dev",
    "dotkernel/dot-controller-plugin-forms": "0.6.x-dev",
    "dotkernel/dot-authentication": "0.6.x-dev",
    "dotkernel/dot-authentication-service": "0.6.x-dev",
    "dotkernel/dot-authentication-web": "0.6.x-dev",
    "dotkernel/dot-authorization": "0.6.x-dev",
    "dotkernel/dot-rbac": "0.6.x-dev",
    "dotkernel/dot-rbac-guard": "0.6.x-dev",
    "dotkernel/dot-user": "0.6.x-dev",
    "dotkernel/dot-mail": "0.6.x-dev",
    "dotkernel/dot-navigation": "0.6.x-dev",
    "dotkernel/dot-twigrenderer": "0.6.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",
    "filp/whoops": "^1.1 || ^2.0",
    "mikey179/vfsstream": "^1.6",
    "zfcampus/zf-development-mode": "^3.1"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-ems"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-log"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-cache"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-form"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-inputfilter"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-filter"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-validator"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-hydrator"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-annotated-services"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-controller-plugin-forms"
    }
  ],
  "autoload": {
    "psr-4": {
      "Dot\\Admin\\": "src/Admin/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dot\\AdminTest\\": "test/AdminTest/"
    }
  },
  "scripts": {
    "development-disable": "zf-development-mode disable",
    "development-enable": "zf-development-mode enable",
    "development-status": "zf-development-mode status",
    "check": [
      "@cs",
      "@test"
    ],
    "clear-config-cache": "php bin/clear-config-cache.php",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  }
}
