{#        </div>#}
{#    {% endif %}#}

    <div class="main {{ mainClass }}">

        {% block content %}{% endblock %}

        {% include '@partial/modals.html.twig' %}

    </div>    <!--/.main-->
</main>

<script src="{{ asset('js/app.js') }}"></script>

